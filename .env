# Database Configuration - PostgreSQL
DATABASE_URL=postgres://certuser:secret@localhost:5432/certmanager?sslmode=disable

# Individual database components (fallback)
DB_HOST=localhost
DB_PORT=5432
DB_USER=certuser
DB_PASSWORD=secret
DB_NAME=certmanager
DB_SSLMODE=disable

# Server Configuration
SERVER_PORT=8443
TLS_ENABLED=false
LOG_LEVEL=info

# TLS Configuration (only needed if TLS_ENABLED=true)
CERT_FILE=./certs/server.crt
KEY_FILE=./certs/server.key
CA_FILE=./certs/ca.crt
